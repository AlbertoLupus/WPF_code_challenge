<Window x:Class="wscad_coding_challenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wscad_coding_challenge"
        mc:Ignorable="d"
        Title="WSCAD - Code Challenge"  WindowState="Maximized" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Name="grid">
        <Canvas Name="canvas" Background="White"
            Height="{Binding ElementName=grid, Path=ActualHeight}" 
            Width="{Binding ElementName=grid, Path=ActualWidth}" 
            VerticalAlignment="Center" HorizontalAlignment="Center"
            SizeChanged="Canvas_SizeChanged"/>
    </Grid>
</Window>
